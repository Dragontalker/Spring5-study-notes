<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="order" class="com.dragontalker.spring5.bean.Order" init-method="initMethod" destroy-method="destroyMethod">
        <property name="orderName" value="iPhone"/>
    </bean>

    <!--配置后置处理器-->
    <bean id="myBeanPost" class="com.dragontalker.spring5.bean.MyBeanPost"/>
</beans>